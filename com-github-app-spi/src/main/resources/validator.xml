<!DOCTYPE form-validation PUBLIC
        "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.4.0//EN"
        "http://commons.apache.org/dtds/validator_1_4_0.dtd">

<form-validation>
    <global>
        <validator name="required"
                   classname="com.github.app.spi.utils.GenericValidatorImpl"
                   method="validateRequired"
                   methodParams="java.lang.Object, org.apache.commons.validator.Field"
                   msg="字段内容不能为空"/>
        <validator name="text"
                   classname="com.github.app.spi.utils.GenericValidatorImpl"
                   method="validateText"
                   methodParams="java.lang.Object, org.apache.commons.validator.Field"
                   msg="字符串中有非法字符"/>
        <validator name="email"
                   classname="com.github.app.spi.utils.GenericValidatorImpl"
                   method="validateEmail"
                   methodParams="java.lang.Object, org.apache.commons.validator.Field"
                   msg="邮箱格式不正确"/>
        <validator name="byte"
                   classname="com.github.app.spi.utils.GenericValidatorImpl"
                   method="validateByte"
                   methodParams="java.lang.Object, org.apache.commons.validator.Field"
                   msg="必须是byte类型"/>
        <validator name="short"
                   classname="com.github.app.spi.utils.GenericValidatorImpl"
                   method="validateShort"
                   methodParams="java.lang.Object, org.apache.commons.validator.Field"
                   msg="必须是short类型"/>
        <validator name="int"
                   classname="com.github.app.spi.utils.GenericValidatorImpl"
                   method="validateInt"
                   methodParams="java.lang.Object, org.apache.commons.validator.Field"
                   msg="必须是int类型"/>
        <validator name="positive"
                   classname="com.github.app.spi.utils.GenericValidatorImpl"
                   method="validatePositive"
                   methodParams="java.lang.Object, org.apache.commons.validator.Field"
                   msg="必须是正数"/>
        <validator name="long"
                   classname="com.github.app.spi.utils.GenericValidatorImpl"
                   method="validateLong"
                   methodParams="java.lang.Object, org.apache.commons.validator.Field"
                   msg="必须是long类型"/>
        <validator name="float"
                   classname="com.github.app.spi.utils.GenericValidatorImpl"
                   method="validateFloat"
                   methodParams="java.lang.Object, org.apache.commons.validator.Field"
                   msg="必须是float类型"/>
        <validator name="double"
                   classname="com.github.app.spi.utils.GenericValidatorImpl"
                   method="validateDouble"
                   methodParams="java.lang.Object, org.apache.commons.validator.Field"
                   msg="必须是double类型"/>

    </global>
    <formset>
        <form name="genericForm">
            <field property="email" depends="email"/>
        </form>
    </formset>
</form-validation>
